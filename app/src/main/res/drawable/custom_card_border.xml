<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo completo (puede ser transparente o un color) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary_background" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Borde general de 1.2dp (aquÃ­ se muestra en rojo para contrastar) -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1.2dp" android:color="@android:color/holo_red_dark" />
            <corners android:radius="8dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <!-- Borde inferior adicional de 1.2dp para hacerlo 2.4dp en total -->
    <item android:top="-2.4dp" android:left="-2.4dp" android:right="-2.4dp">
        <shape android:shape="rectangle">
            <stroke android:width="2.4dp" android:color="@color/white_text" />
            <corners android:radius="8dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
